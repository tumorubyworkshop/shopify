<h2>List of products</h2>
<div class="row">

<% @products.each do |product|%>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
            <%= image_tag(product.img, class:"card-img-top", style:"width:200px; margin:auto;") unless product.img.nil? %>

            <div class="card-body">
                <h6 class="about_product"><%= product.title %></h6>
                <p class="about_product"><%= product.price %></p>
            </div>
            <div class="card-footer">
                <%= link_to "Add to cart" , cart_add_path(product: product.id), class: 'btn btn-secondary' %>
            </div>
        </div>
    </div>
<% end %>

</div>